<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/madlibs2"
    tools:context=".FillTheWords">

    <Button
        android:id="@+id/btn_continuar"
        android:layout_width="113dp"
        android:layout_height="47dp"
        android:background="#090909"
        android:text="Next"
        android:textColor="#F8EEEE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Edit"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="@+id/Edit"
        app:layout_constraintTop_toBottomOf="@+id/Edit"
        app:layout_constraintVertical_bias="0.083" />

    <EditText
        android:id="@+id/Edit"
        android:layout_width="251dp"
        android:layout_height="47dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="264dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Ecriba la palabra"
        android:inputType="textPersonName"
        android:textColor="#0C0C0C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="365dp"
        android:layout_height="42dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="188dp"
        android:background="#39FFFFFF"
        android:gravity="center"
        android:textColor="#090909"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/TxtWord"
        android:layout_width="227dp"
        android:layout_height="35dp"
        android:layout_marginTop="84dp"
        android:background="#4FFFFFFF"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#090909"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:layout_constraintVertical_bias="0.6" />
</androidx.constraintlayout.widget.ConstraintLayout>